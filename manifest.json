{
    "description": "Additional features for animepahe.",
    "manifest_version": 2,
    "name": "Animepahe Plus",
    "version": "1.0",
    "homepage_url": "https://example.com",
    "icons": {
        "48": "icons/dark-48.png"
    },

    "permissions": ["activeTab", "storage", "*://graphql.anilist.co/*"],

    "browser_action": {
        "default_icon": "icons/dark-32.png",
        "default_title": "Animepahe+",
        "default_popup": "settings/conf.html"
    },

    "web_accessible_resources": [
        "style/pages/*.css",
        "style/main.css",
        "img/*.svg",
        "img/*.png"
    ],

    "content_scripts": [
        {
            "matches": [
                "*://*.animepahe.com/*",
                "*://*.animepahe.org/*",
                "*://*.animepahe.ru/*"
            ],

            "run_at": "document_idle",
            "css": ["style/main.css"],
            "js": [
                "pages/index.js",
                "pages/general/random.js",
                "pages/general/fakesite.js"
            ]
        },

        {
            "matches": [
                "*://*.animepahe.com/anime/*",
                "*://*.animepahe.org/anime/*",
                "*://*.animepahe.ru/anime/*"
            ],

            "run_at": "document_idle",
            "css": ["style/pages/info.css"],
            "js": [
                "pages/info/blur.js",
                "pages/info/episode.js",
                "pages/info/score.js"
            ]
        },

        {
            "matches": [
                "*://*.animepahe.com/play/*",
                "*://*.animepahe.org/play/*",
                "*://*.animepahe.ru/play/*"
            ],

            "run_at": "document_idle",
            "css": ["style/pages/watch.css"],
            "js": [
                "pages/watch/number.js",
                "pages/watch/bookmark.js",
                "pages/watch/resolution.js"
            ]
        },

        {
            "matches": [
                "*://*.animepahe.com/b/*",
                "*://*.animepahe.org/b/*",
                "*://*.animepahe.ru/b/*"
            ],

            "run_at": "document_idle",
            "js": ["pages/bookmark/_.js"]
        }
    ],

    "options_ui": {
        "page": "settings/conf.html",
        "open_in_tab": true
    },

    "browser_specific_settings": {
        "gecko": {
            "id": "pahe-plus@hwk",
            "strict_min_version": "57.0a1"
        }
    }
}
